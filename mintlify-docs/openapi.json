{
  "openapi": "3.1.0",
  "info": {
    "title": "LaTeX Chart Knowledge MCP API",
    "version": "1.0.0",
    "description": "MCP protocol-compliant API for LaTeX chart generation knowledge base, providing structured access to TikZ/PGFPlots documentation, executable examples, and human feedback.",
    "contact": {
      "name": "API Support",
      "email": "support@example.com"
    }
  },
  "servers": [
    {
      "url": "https://your-domain.mintlify.app/mcp",
      "description": "Production MCP Server"
    },
    {
      "url": "http://localhost:3000/mcp",
      "description": "Local Development Server"
    }
  ],
  "paths": {
    "/api/mcp/latex/chart/example": {
      "get": {
        "summary": "Get Executable Chart Examples",
        "description": "Retrieve executable LaTeX code examples by chart type, supporting multimodal model rendering.",
        "operationId": "getChartExample",
        "tags": ["Examples"],
        "parameters": [
          {
            "name": "chart_type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "line_chart",
                "bar_chart",
                "scatter_plot",
                "3d_plot",
                "flowchart",
                "node_graph",
                "pie_chart",
                "other"
              ]
            },
            "description": "Type of chart to retrieve examples for"
          },
          {
            "name": "macro_package",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["tikz", "pgfplots"]
            },
            "description": "LaTeX macro package filter"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10,
              "minimum": 1,
              "maximum": 100
            },
            "description": "Maximum number of examples to return"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with executable examples",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExampleResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "404": {
            "description": "No examples found"
          }
        }
      }
    },
    "/api/mcp/latex/chart/command": {
      "get": {
        "summary": "Query Command Specifications",
        "description": "Retrieve TikZ/PGFPlots command specifications, including syntax, parameters, and usage rules.",
        "operationId": "getCommandSpec",
        "tags": ["Commands"],
        "parameters": [
          {
            "name": "command_name",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Specific command name to search for (e.g., 'pgfplot', 'tikzpicture')"
          },
          {
            "name": "macro_package",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["tikz", "pgfplots"]
            },
            "description": "Filter by macro package"
          },
          {
            "name": "search",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Full-text search in command descriptions"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with command specifications",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CommandResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/mcp/latex/chart/feedback": {
      "get": {
        "summary": "Query Human Feedback and Best Practices",
        "description": "Retrieve warnings, notes, and best practices from official documentation.",
        "operationId": "getFeedback",
        "tags": ["Feedback"],
        "parameters": [
          {
            "name": "feedback_type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["warning", "note", "best_practice"]
            },
            "description": "Type of feedback to retrieve"
          },
          {
            "name": "severity",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["high", "medium", "low"]
            },
            "description": "Filter by severity level"
          },
          {
            "name": "macro_package",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["tikz", "pgfplots"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with feedback items",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FeedbackResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/mcp/latex/chart/search": {
      "get": {
        "summary": "Universal Knowledge Search",
        "description": "Perform full-text search across all knowledge types (commands, examples, feedback).",
        "operationId": "searchKnowledge",
        "tags": ["Search"],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Search query string"
          },
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "command_specification",
                "executable_example",
                "human_feedback",
                "environment_specification"
              ]
            },
            "description": "Filter by knowledge type"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20,
              "minimum": 1,
              "maximum": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful search results",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ExampleResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ExecutableExample"
            }
          },
          "meta": {
            "$ref": "#/components/schemas/ResponseMeta"
          }
        }
      },
      "ExecutableExample": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["executable_example"]
          },
          "macro_package": {
            "type": "string"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "chart_type": {
                "type": "string"
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "content": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "code": {
                "type": "string",
                "description": "Executable LaTeX code"
              },
              "dependencies": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "parameters": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "CommandResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CommandSpec"
            }
          },
          "meta": {
            "$ref": "#/components/schemas/ResponseMeta"
          }
        }
      },
      "CommandSpec": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["command_specification"]
          },
          "macro_package": {
            "type": "string"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "command_name": {
                "type": "string"
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "content": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "syntax": {
                "type": "string"
              },
              "parameters": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              },
              "examples": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "FeedbackResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FeedbackItem"
            }
          },
          "meta": {
            "$ref": "#/components/schemas/ResponseMeta"
          }
        }
      },
      "FeedbackItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["human_feedback"]
          },
          "macro_package": {
            "type": "string"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "feedback_type": {
                "type": "string"
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "content": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["high", "medium", "low"]
              },
              "recommended_action": {
                "type": "string"
              }
            }
          }
        }
      },
      "SearchResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/ExecutableExample"
                },
                {
                  "$ref": "#/components/schemas/CommandSpec"
                },
                {
                  "$ref": "#/components/schemas/FeedbackItem"
                }
              ]
            }
          },
          "meta": {
            "$ref": "#/components/schemas/ResponseMeta"
          }
        }
      },
      "ResponseMeta": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer"
          },
          "count": {
            "type": "integer"
          },
          "page": {
            "type": "integer"
          },
          "query_time_ms": {
            "type": "number"
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ]
}
